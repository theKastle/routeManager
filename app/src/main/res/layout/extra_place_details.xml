<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/extra_details"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/extra_detail_vertical_padding"
    android:paddingTop="@dimen/extra_detail_vertical_padding">

    <android.support.constraint.Guideline
        android:id="@+id/vertical_quarter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"/>

    <android.support.constraint.Guideline
        android:id="@+id/vertical_half"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

    <!--Place icon-->
    <ImageView
        android:layout_width="@dimen/extra_icon_detail"
        android:layout_height="@dimen/extra_icon_detail"
        android:id="@+id/place_icon"
        android:src="@drawable/ic_food"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/vertical_quarter" />

    <!--Place TextView-->
    <TextView
        android:id="@+id/place_text_view_detail"
        style="@style/detail_label"
        tools:text="Nha hang Bun Bo 123"
        app:layout_constraintBottom_toTopOf="@+id/place_icon"
        app:layout_constraintTop_toBottomOf="@+id/place_icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintVertical_bias="0.492"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_quarter" />

    <!--Rating bar-->
    <RatingBar
        android:id="@+id/rating_bar"
        style="?android:attr/ratingBarStyleIndicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:rating="2.5"
        android:stepSize="0.5"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/vertical_half"
        android:layout_marginRight="0dp"
        app:layout_constraintHorizontal_bias="0.415"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/place_icon"
        app:layout_constraintRight_toLeftOf="@+id/vertical_half" />

    <!--Address icon-->
    <ImageView
        android:layout_width="@dimen/extra_icon_detail"
        android:layout_height="@dimen/extra_icon_detail"
        android:id="@+id/home_icon"
        android:src="@drawable/ic_home"
        app:layout_constraintLeft_toLeftOf="@+id/place_icon"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/rating_bar"
        app:layout_constraintRight_toRightOf="@+id/place_icon" />

    <!--Place TextView-->
    <TextView
        android:id="@+id/address_text_view_detail"
        style="@style/detail_label"
        tools:text="123 Nguyen Dinh Chieu"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/home_icon"
        app:layout_constraintBottom_toTopOf="@+id/home_icon"
        app:layout_constraintLeft_toLeftOf="@+id/place_text_view_detail"
        android:layout_marginLeft="0dp" />

    <!--Phone icon-->
    <ImageView
        android:layout_width="@dimen/extra_icon_detail"
        android:layout_height="@dimen/extra_icon_detail"
        android:id="@+id/phone_icon"
        android:src="@drawable/ic_phone"
        app:layout_constraintLeft_toLeftOf="@+id/home_icon"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/home_icon" />
    <!--Phone TextView-->
    <TextView
        android:id="@+id/phone_text_view_detail"
        style="@style/detail_label"
        tools:text="123456789"
        app:layout_constraintTop_toBottomOf="@+id/phone_icon"
        app:layout_constraintBottom_toTopOf="@+id/phone_icon"
        app:layout_constraintLeft_toLeftOf="@+id/address_text_view_detail"
        android:layout_marginLeft="0dp" />


</android.support.constraint.ConstraintLayout>